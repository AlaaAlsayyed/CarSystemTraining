@{
    ViewData["Title"] = "Manage Cars";
}

@section Styles{
    <link type="text/css" rel="stylesheet" href="~/lib/dataTable/editor.dataTables.min.css" />
}
<main role="main" class="container-fluid">
    <div class="card border-primary mb-3">
        <div class="card-header bg-primary">
            <h5 class="text-white mb-0" data-toggle="collapse" data-target="#collapse_ManageCars">
                <i class="fa" aria-hidden="true"></i>
                Manage Cars
            </h5>
        </div>
        <div id="collapse_ManageCars" class="collapse show">
            <div class="card-body">
                <div class="row">
                    <div style="width: 100%">
                        <table id="tblReport" class="table table-striped table-bordered collapsed no-footer dataTable tblReport" style="width: 100%"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- add new Car -->
    <div class="modal" id="NewCarModal" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content animated fadeIn">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Car</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Car Name</label>
                                <input type="text" id="txtCarName" class="form-control" placeholder="Car Name" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Plate Number</label>
                                <input type="text" id="txtPlateNumber" class="form-control" placeholder="Car Number" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label> License </label>
                                <input type="text" id="txtLicanceId" class="form-control" placeholder="License Id" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-danger float-left" data-dismiss="modal">Close</button>
                    <button id="btnAddCar" class="btn btn-sm btn-info float-right" type="button">
                        <span class="fa fa-plus" aria-hidden="true"></span>
                        Add Car
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts{
    <script type="text/javascript" src="~/lib/dataTable/dataTables.editor.min.js"></script>
    <script type="text/javascript" src="~/js/ManageCars2.js"></script>
}


